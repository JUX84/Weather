<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uavignon.fr.weather.CityView"
    android:id="@+id/cityviewlayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/city"
        android:id="@+id/cityTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/country"
        android:id="@+id/countryTitle"
        android:layout_below="@+id/cityTitle"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/wind"
        android:id="@+id/windTitle"
        android:layout_below="@+id/countryTitle"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/pressure"
        android:id="@+id/pressureTitle"
        android:layout_below="@+id/windTitle"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/temp"
        android:id="@+id/tempTitle"
        android:layout_below="@+id/pressureTitle"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/date"
        android:id="@+id/dateTitle"
        android:layout_below="@+id/tempTitle"
        android:layout_alignParentStart="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/cityValue"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:width="200dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/countryValue"
        android:layout_below="@+id/cityValue"
        android:layout_alignEnd="@+id/cityValue"
        android:layout_alignParentStart="false"
        android:width="200dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/windValue"
        android:layout_below="@+id/countryValue"
        android:layout_alignEnd="@+id/countryValue"
        android:width="200dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/pressureValue"
        android:layout_alignTop="@+id/pressureTitle"
        android:layout_alignEnd="@+id/windValue"
        android:width="200dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tempValue"
        android:layout_below="@+id/pressureValue"
        android:layout_alignParentEnd="false"
        android:layout_alignEnd="@+id/pressureValue"
        android:width="200dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/dateValue"
        android:layout_below="@+id/tempValue"
        android:layout_alignEnd="@+id/tempValue"
        android:ellipsize="marquee"
        android:width="200dp"
        android:singleLine="true"
        android:textSize="15dp" />
</RelativeLayout>
